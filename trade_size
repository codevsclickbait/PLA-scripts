variables:	myAcc(0), size(0), counter(0);

If getappinfo(aiStrategyAuto) = 1 then
	myAcc = GetRTAccountEquity(GetAccountID())
else
	myAcc = InitialCapital + netprofit;
	
While counter < myAcc Begin
	value1 = myAcc / 1000;
	value1 = Ceiling(value1 / 5);

	counter = counter + 1;
end;

my_tradesize_uni = value1;
